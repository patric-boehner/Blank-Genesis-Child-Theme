{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {

        "layout": {
            "contentSize": "var(--wp--custom--width--responsive)",
            "wideSize": "var(--wp--custom--width--full)"
        },

        "appearanceTools": false,

        "color": {

            "defaultPalette": false,
            "defaultDoutones": false,
            "defaultGradients": false,
            
            "custom": false,
            "customDuotone": false,
            "customGradient": false,

            "duotone": [],
            "gradients": [],
           
            "link": false,
            "palette": [
                {
                    "slug": "blue",
                    "color": "#004b96",
                    "name": "Blue"
                },
                {
                    "slug": "light-blue",
                    "color": "#d5e1ee",
                    "name": "Light Blue"
                },
                {
                    "slug": "green",
                    "color": "#30643A",
                    "name": "Green"
                },
                {
                    "slug": "light-green",
                    "color": "#D1E6D4",
                    "name": "Light Green"
                },
                {
                    "slug": "dark-gray",
                    "color": "#333",
                    "name": "Dark Gray"
                },
                {
                    "slug": "light-gray",
                    "color": "#eee",
                    "name": "Light Gray"
                },
                {
                    "slug": "white",
                    "color": "#fff",
                    "name": "White"
                }
            ]
        },

        "typography": {

            "customFontSize": false,
			"fontStyle": false,
			"fontWeight": false,
			"letterSpacing": false,
			"lineHeight": false,
			"textDecoration": false,
			"textTransform": false,
			"dropCap": false,

            "fontFamilies": [
                {
                    "fontFamily": "'Source Sans Pro', sans-serif",
                    "slug": "primary",
                    "name": "Primary Font"
                }
            ],

            "fontSizes": [
                {
                    "slug": "tiny",
                    "size": "calc( (16/16) * 1rem)",
                    "name": "Tiny"
                },
                {
                    "slug": "small",
                    "size": "calc( (18/16) * 1rem)",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "calc( (20/16) * 1rem)",
                    "name": "Normal"
                },
                {
                    "slug": "large",
                    "size": "clamp( calc( (22/16) * 1rem), 4vw, calc( (24/16) * 1rem))",
                    "name": "Large"
                },
                {
                    "slug": "extra-large",
                    "size": "clamp( calc( (24/16) * 1rem), 4vw, calc( (31/16) * 1rem))",
                    "name": "H3 Heading"
                },
                {
                    "slug": "huge",
                    "size": "clamp( calc( (31/16) * 1rem), 4vw, calc( (39/16) * 1rem))",
                    "name": "H2 Heading"
                },
                {
                    "slug": "gigantic",
                    "size": "clamp( calc( (39/16) * 1rem), 4vw, calc( (49/16) * 1rem))",
                    "name": "H1 Heading"
                }
            ]
        },

        "spacing": {
			"blockGap": null,
			"margin": false,
			"padding": false,
            "units": []
		},

        "custom": {
            "fontWeight": {
                "normal": "400",
                "bold": "600"
            },
            "lineHeight": {
                "small": "1.2",
                "normal": "1.35"
            },
            "color": {
                "foreground": "var(--wp--preset--color--dark-gray)",
                "background": "var(--wp--preset--color--white)",
                "primary": "var(--wp--preset--color--blue)",
                "secondary": "var(--wp--preset--color--green)"
            },
            "heading": {
                "size-h1": "clamp( calc( (39/16) * 1rem), 4vw, calc( (49/16) * 1rem) )",
                "size-h2": "clamp( calc( (31/16) * 1rem), 4vw, calc( (39/16) * 1rem) )",
                "size-h3": "clamp( calc( (24/16) * 1rem), 4vw, calc( (31/16) * 1rem) )",
                "size-h4": "clamp( calc( (22/16) * 1rem), 4vw, calc( (24/16) * 1rem) )",
                "size-h5": "calc( (18/16) * 1rem)",
                "size-h6": "calc( (16/16) * 1rem)",
                "text-transform": "uppercase"
            },
            "border": {
                "color": "var(--wp--custom--color--foreground)"
            },
            "icon": {
                "normal": "calc( (20/16) * 1rem )",
                "medium": "calc( (28/16) * 1rem )",
                "small": "calc( var(--wp--custom--icon--medium) / 2 )",
                "large": "calc( var(--wp--custom--icon--medium) * 2 )"
            },
            "spacing": {
                "x-small": "5px",
                "small": "15px",
                "medium": "30px",
                "medium-large": "60px",
                "large": "90px",
                "x-large": "120px",
                "side": "clamp( calc( (30/16) * 1rem), 5vw, calc( (180/16) * 1rem) )",
                "main": "var(--wp--custom--spacing--x-large)",
                "entry-content": "var(--wp--custom--spacing--large)",
                "block-gap": "var(--wp--custom--spacing--large)",
                "group-padding": "var(--wp--custom--spacing--medium-large)"
            },
            "width": { 
                "full": "1400px",
                "content": "800px",
                "small": "600px",
                "max-width": "var(--wp--custom--width--full)",
                "responsive": "var(--wp--custom--width--full)",
                "scrollbar": "15px"
            },
            "grid": {
                "gap": "var(--wp--custom--spacing--medium)"
            },
            "ratio": {
                "16-9": "16/9"
            },
            "button": {
                "padding": "16px 24px",
                "font-size": "var(--wp--preset--font-size--small)",
                "background": "var(--wp--custom--color--secondary)",
                "color": "var(--wp--preset--color--white)"
            }
        }

    },

    "styles": {

        "color": {
			"background": "var(--wp--custom--color--background)",
			"text": "var(--wp--custom--color--foreground)"
		},

        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "fontFamily": "var(--wp--preset--font-family--primary)",
			"lineHeight": "var(--wp--custom--line-height--normal)",
            "fontWeight": "var(--wp--custom--font-weight--normal)"
        },

        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--custom--color--secondary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-1)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-2)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-3)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-4)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-5)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--custom--heading--size-h-6)"
                }
            }
        }
        
    },

    "blocks": {
    },

    "templateparts": [
    ]

}